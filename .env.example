# U校园自动化框架环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# ================================
# U校园登录凭据
# ================================
UCAMPUS_USERNAME=your_username
UCAMPUS_PASSWORD=your_password

# ================================
# 应用程序设置
# ================================
# 调试模式 (true/false)
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 应用程序语言 (zh, en)
APP_LANGUAGE=zh

# ================================
# 浏览器设置
# ================================
# 浏览器类型 (chromium, firefox, webkit)
BROWSER_NAME=chromium

# 是否无头模式 (true/false)
BROWSER_HEADLESS=false

# 操作延迟 (毫秒)
BROWSER_SLOW_MO=100

# 超时时间 (毫秒)
BROWSER_TIMEOUT=30000

# 窗口大小
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# ================================
# 视频设置
# ================================
# 默认播放速度 (1.0-4.0)
VIDEO_SPEED=2.0

# 是否静音播放 (true/false)
VIDEO_MUTED=true

# 是否自动播放 (true/false)
VIDEO_AUTO_PLAY=true

# 是否跳过广告 (true/false)
VIDEO_SKIP_ADS=true

# ================================
# 答题设置
# ================================
# 是否自动提交答案 (true/false)
AUTO_SUBMIT=true

# 是否显示答案预览 (true/false)
SHOW_PREVIEW=true

# 最大重试次数
MAX_RETRIES=3

# 是否跳过已完成的题目 (true/false)
SKIP_COMPLETED=true

# ================================
# 延迟设置 (秒)
# ================================
# 页面加载等待时间
DELAY_PAGE_LOAD=2.0

# 元素等待时间
DELAY_ELEMENT_WAIT=1.0

# 点击延迟
DELAY_CLICK=0.5

# 输入延迟
DELAY_TYPE=0.1

# 视频检查间隔
DELAY_VIDEO_CHECK=3.0

# 重试延迟
DELAY_RETRY=2.0

# ================================
# 题库设置
# ================================
# 远程题库URL
QUESTION_BANK_URL=https://raw.githubusercontent.com/twj0/Unipus_AI-4/refs/heads/main/U%E6%A0%A1%E5%9B%AD%20%E6%96%B0%E4%B8%80%E4%BB%A3%E5%A4%A7%E5%AD%A6%E8%8B%B1%E8%AF%AD%20%E7%BB%BC%E5%90%88%E6%95%99%E7%A8%8B1%E8%8B%B1%E8%AF%AD%E9%A2%98%E5%BA%93.json

# 题库缓存时间 (毫秒)
QUESTION_BANK_CACHE=86400000

# 是否启用本地题库 (true/false)
ENABLE_LOCAL_BANK=true

# ================================
# 界面设置
# ================================
# 界面主题 (light, dark)
UI_THEME=light

# 窗口大小
UI_WINDOW_WIDTH=800
UI_WINDOW_HEIGHT=600

# 是否置顶显示 (true/false)
UI_ALWAYS_ON_TOP=false

# ================================
# 错误处理设置
# ================================
# 是否自动重试 (true/false)
ERROR_AUTO_RETRY=true

# 重试间隔倍数
ERROR_RETRY_MULTIPLIER=2

# 是否记录错误日志 (true/false)
ERROR_LOG_ERRORS=true

# 是否显示错误通知 (true/false)
ERROR_SHOW_NOTIFICATIONS=true

# ================================
# 高级设置
# ================================
# 是否启用页面监听 (true/false)
ENABLE_PAGE_OBSERVER=true

# 是否启用URL监听 (true/false)
ENABLE_URL_OBSERVER=true

# 是否启用快捷键 (true/false)
ENABLE_HOTKEYS=true

# 是否启用统计功能 (true/false)
ENABLE_STATISTICS=true

# 是否启用兼容模式 (true/false)
COMPATIBILITY_MODE=false

# 是否检查兼容性 (true/false)
CHECK_COMPATIBILITY=true

# ================================
# 数据持久化设置
# ================================
# 是否保存用户设置 (true/false)
SAVE_SETTINGS=true

# 是否保存操作历史 (true/false)
SAVE_HISTORY=false

# 存储键前缀
STORAGE_PREFIX=ucampus_

# ================================
# 网络设置
# ================================
# 请求超时时间 (秒)
REQUEST_TIMEOUT=30

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=5

# 是否使用代理 (true/false)
USE_PROXY=false

# 代理地址 (如果启用代理)
PROXY_URL=http://localhost:8080

# ================================
# 安全设置
# ================================
# 是否启用SSL验证 (true/false)
SSL_VERIFY=true

# 用户代理字符串 (留空使用默认)
USER_AGENT=

# ================================
# 开发设置
# ================================
# 是否启用开发模式 (true/false)
DEV_MODE=false

# 是否启用详细日志 (true/false)
VERBOSE_LOGGING=false

# 是否保存截图 (true/false)
SAVE_SCREENSHOTS=false

# 截图保存路径
SCREENSHOT_PATH=screenshots/
